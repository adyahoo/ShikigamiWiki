<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ImageFullscreenActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/img_fullscreen_slider"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:placeholder="@color/black"
        android:layout_centerInParent="true">
    </com.denzcoskun.imageslider.ImageSlider>


<!--    <ImageView-->
<!--        android:id="@+id/img_fullscreen"-->
<!--        android:layout_width="fill_parent"-->
<!--        android:layout_height="fill_parent"-->
<!--        android:scaleType="fitCenter"-->
<!--        android:src="@color/gray_dark"/>-->

    <ImageView
        android:id="@+id/btn_close_fullscreen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/btn_close_fullscreen"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"/>


</RelativeLayout>